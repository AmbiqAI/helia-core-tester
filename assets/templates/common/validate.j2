// Validation function (from CMSIS-NN test utils)
#include <stdio.h>
#include <stdbool.h>

{% if output_dtype == 'int8_t' %}
static inline int validate(int8_t *act, const int8_t *ref, int size)
{
    int test_passed = true;
    int count = 0;
    int total = 0;

    for (int i = 0; i < size; ++i)
    {
        total++;
        int diff = (int)act[i] - (int)ref[i];
        if (diff < 0) diff = -diff;  // absolute difference
        if (diff > 1)  // Allow tolerance of 1 bit difference
        {
            count++;
            printf("ERROR at pos %d: Act: %d Ref: %d (diff: %d)\r\n", i, act[i], ref[i], diff);
            test_passed = false;
        }
    }

    if (!test_passed)
    {
        printf("%d of %d failed\r\n", count, total);
    }

    return test_passed;
}
