static inline void signal_eot(void)
{
    // 0x04 (EOT) triggers FVP shutdown when:
    //   -C mps3_board.uart0.shutdown_on_eot=1
    putchar(4);
    fflush(stdout);
}

// If we hardfault, the default handler often spins forever -> FVP never exits.
// Override to emit EOT so the runner doesn't stall.
void HardFault_Handler(void)
{
    printf("HardFault\r\n");
    signal_eot();
    while (1) { }
}

// Context for buffer allocation
static cmsis_nn_context {{ name }}_ctx;

// Runtime scratch buffer (max upper bound; actual size queried at runtime)
// Buffer size calculated conservatively to handle MVE and DSP implementations
#define {{ name|upper }}_BUFFER_SIZE_MAX {{ buffer_size_max }}
static uint8_t {{ name }}_buffer[{{ name|upper }}_BUFFER_SIZE_MAX];

// Reverse convolution context buffer (output_ctx parameter in arm_transpose_conv_wrapper_s8)
// Size: output width * output height * output channel * 4
#define {{ name|upper }}_REVERSE_CONV_CTX_SIZE {{ reverse_conv_ctx_size }}
static uint8_t {{ name }}_reverse_conv_ctx_buffer[{{ name|upper }}_REVERSE_CONV_CTX_SIZE];
static cmsis_nn_context {{ name }}_reverse_conv_ctx;

{% if has_weight_sum %}
// Weight sum context for s8 transpose convolutions (matches CMSIS-NN test approach)
static cmsis_nn_context {{ name }}_weight_sum_ctx;
// Weight sum buffer size: output_dims.c * sizeof(int32_t) (matches arm_convolve_s8_get_weights_sum_size)
#define {{ name|upper }}_WEIGHT_SUM_BUFFER_SIZE ({{ output_dims.c }} * sizeof(int32_t))
static uint8_t {{ name }}_weight_sum_buffer[{{ name|upper }}_WEIGHT_SUM_BUFFER_SIZE];
{% endif %}

#define {{ name|upper }}_OUTPUT_SIZE ({{ output_dims.n }} * {{ output_dims.h }} * {{ output_dims.w }} * {{ output_dims.c }})
static {{ output_dtype }} {{ name }}_output[{{ name|upper }}_OUTPUT_SIZE];

int32_t {{ prefix }}_{{ name }}_run(
    const {{ input_dtype }}* __restrict input,
    {{ output_dtype }}* __restrict output
) {
    // Calculate required buffer size
    int32_t required_buffer_size = {{ kernel_get_buffer_size_fn }}(
        &{{ name }}_transpose_conv_params,
        &{{ name }}_input_dims,
        &{{ name }}_filter_dims,
        &{{ name }}_output_dims
    );

    if (required_buffer_size > {{ name|upper }}_BUFFER_SIZE_MAX) {
        printf("Buffer size error: required=%d > max=%d\r\n", required_buffer_size, {{ name|upper }}_BUFFER_SIZE_MAX);
        return ARM_CMSIS_NN_ARG_ERROR;
    }

    // Initialize context buffer
    {{ name }}_ctx.buf = {{ name }}_buffer;
    {{ name }}_ctx.size = required_buffer_size;

    // Initialize reverse convolution context buffer (output_ctx parameter)
    {{ name }}_reverse_conv_ctx.buf = {{ name }}_reverse_conv_ctx_buffer;
    {{ name }}_reverse_conv_ctx.size = {{ name|upper }}_REVERSE_CONV_CTX_SIZE;

    {% if has_weight_sum %}
    // Initialize weight sum context and compute weight_sum (matches CMSIS-NN test approach)
    {{ name }}_weight_sum_ctx.buf = {{ name }}_weight_sum_buffer;
    {{ name }}_weight_sum_ctx.size = {{ name|upper }}_WEIGHT_SUM_BUFFER_SIZE;
    
    // Compute weight_sum using arm_convolve_weight_sum (matches CMSIS-NN test_arm_transpose_conv_s8.c)
    int32_t lhs_offset = {{ name }}_transpose_conv_params.input_offset;
    arm_cmsis_nn_status weight_sum_status = arm_convolve_weight_sum(
        (int32_t *){{ name }}_weight_sum_ctx.buf,
        {{ name }}_weights,
        &{{ name }}_input_dims,
        &{{ name }}_filter_dims,
        &{{ name }}_output_dims,
        lhs_offset,
        {% if has_biases %}
        {{ name }}_biases
        {% else %}
        NULL
        {% endif %}
    );
    
    if (weight_sum_status != ARM_CMSIS_NN_SUCCESS) {
        printf("Weight sum computation failed with status %d\r\n", weight_sum_status);
        return weight_sum_status;
    }
    {% endif %}

    // Call transpose convolution kernel
    arm_cmsis_nn_status kernel_status = {{ kernel_fn }}(
        &{{ name }}_ctx,
        {% if has_weight_sum %}
        &{{ name }}_weight_sum_ctx,
        {% else %}
        NULL,
        {% endif %}
        &{{ name }}_reverse_conv_ctx,
        &{{ name }}_transpose_conv_params,
        &{{ name }}_quant_params,
        &{{ name }}_input_dims,
        input,
        &{{ name }}_filter_dims,
        {{ name }}_weights,
        &{{ name }}_bias_dims,
        {% if has_biases %}
        {{ name }}_biases,
        {% else %}
        NULL,
        {% endif %}
        &{{ name }}_output_dims,
        output
    );
    
    return kernel_status;
}

