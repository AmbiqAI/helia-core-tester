static inline void signal_eot(void)
{
    // 0x04 (EOT) triggers FVP shutdown when:
    //   -C mps3_board.uart0.shutdown_on_eot=1
    putchar(4);
    fflush(stdout);
}

// If we hardfault, the default handler often spins forever -> FVP never exits.
// Override to emit EOT so the runner doesn't stall.
void HardFault_Handler(void)
{
    printf("HardFault\r\n");
    signal_eot();
    while (1) { }
}

// Context for buffer allocation
static cmsis_nn_context {{ name }}_ctx;

// Runtime scratch buffer (max upper bound; actual size queried at runtime)
// Buffer size calculated conservatively to handle MVE and DSP implementations
#define {{ name|upper }}_BUFFER_SIZE_MAX {{ buffer_size_max }}
static uint8_t {{ name }}_buffer[{{ name|upper }}_BUFFER_SIZE_MAX];


#define {{ name|upper }}_OUTPUT_SIZE ({{ output_dims.n }} * {{ output_dims.h }} * {{ output_dims.w }} * {{ output_dims.c }})
static {{ output_dtype }} {{ name }}_output[{{ name|upper }}_OUTPUT_SIZE];

int32_t {{ prefix }}_{{ name }}_run(
    const {{ input_dtype }}* __restrict input,
    {{ output_dtype }}* __restrict output
) {
    // Calculate required buffer size
    {% if quant_params.per_channel and output_dtype == 'int16_t' %}
    // For per-channel S16, use per_channel buffer size function
    int32_t required_buffer_size = arm_fully_connected_per_channel_s16_get_buffer_size(
        &{{ name }}_filter_dims
    );
    {% else %}
    int32_t required_buffer_size = {{ kernel_get_buffer_size_fn }}(
        &{{ name }}_filter_dims
    );
    {% endif %}

    if (required_buffer_size > {{ name|upper }}_BUFFER_SIZE_MAX) {
        printf("Buffer size error: required=%d > max=%d\r\n", required_buffer_size, {{ name|upper }}_BUFFER_SIZE_MAX);
        return ARM_CMSIS_NN_ARG_ERROR;
    }

    // Initialize context buffer
    {% if has_weight_sum %}
    // For S8 fully connected with weight_sum, the ctx buffer should point to precomputed weight_sum
    // Weight sum is precomputed at code generation time and embedded in header
    // ctx.size must be in bytes: filter_dims.c * sizeof(int32_t)
    {{ name }}_ctx.buf = (uint8_t *){{ name }}_weight_sum;
    {{ name }}_ctx.size = {{ filter_dims.c }} * 4;  // sizeof(int32_t) = 4
    {% else %}
    {{ name }}_ctx.buf = {{ name }}_buffer;
    {{ name }}_ctx.size = required_buffer_size;
    {% endif %}

    // Call fully connected kernel
    {% if quant_params.per_channel %}
    // Per-channel quantization - use per-channel function directly
    {% if output_dtype == 'int8_t' %}
    arm_cmsis_nn_status kernel_status = arm_fully_connected_per_channel_s8(
    {% else %}
    arm_cmsis_nn_status kernel_status = arm_fully_connected_per_channel_s16(
    {% endif %}
        &{{ name }}_ctx,
        &{{ name }}_fc_params,
        &{{ name }}_quant_params,
        &{{ name }}_input_dims,
        input,
        &{{ name }}_filter_dims,
        {{ name }}_weights,
        &{{ name }}_bias_dims,
        {% if has_biases %}
        {{ name }}_biases,
        {% else %}
        NULL,
        {% endif %}
        &{{ name }}_output_dims,
        output
    );
    {% else %}
    // Per-tensor quantization - use wrapper function
    // For per-tensor, we need to create cmsis_nn_quant_params from per_tensor
    cmsis_nn_quant_params quant_params_wrapper = {
        .multiplier = (int32_t*)&{{ name }}_multiplier_val,
        .shift = (int32_t*)&{{ name }}_shift_val,
        .is_per_channel = 0
    };
    arm_cmsis_nn_status kernel_status = {{ kernel_fn }}(
        &{{ name }}_ctx,
        &{{ name }}_fc_params,
        &quant_params_wrapper,
        &{{ name }}_input_dims,
        input,
        &{{ name }}_filter_dims,
        {{ name }}_weights,
        &{{ name }}_bias_dims,
        {% if has_biases %}
        {{ name }}_biases,
        {% else %}
        NULL,
        {% endif %}
        &{{ name }}_output_dims,
        output
    );
    {% endif %}
    
    return kernel_status;
}

